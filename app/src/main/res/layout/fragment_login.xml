<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_ef"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="cc.xaabb.dynamicschedule.module.user.LoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/shape_radius4_white">

        <EditText
            android:id="@+id/edit_username"
            android:hint="请输入用户名"
            android:textSize="14sp"
            android:textColorHint="@color/colorText999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorAlpha999"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:id="@+id/edit_password"
            android:hint="请输入密码"
            android:textSize="14sp"
            android:textColorHint="@color/colorText999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@android:color/transparent"/>
        <View
            android:id="@+id/view_diver"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorAlpha999"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/edit_password_confirm"
            android:hint="请确认密码"
            android:textSize="14sp"
            android:textColorHint="@color/colorText999"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:textColor="@color/colorTextBody"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:text="注册"
            android:background="@drawable/shape_radius4_white_border1_grey"/>
        <Space
            android:layout_width="10dp"
            android:layout_height="1dp" />
        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:text="登录"
            android:background="@drawable/shape_radius4_primary"/>
    </LinearLayout>
</LinearLayout>
