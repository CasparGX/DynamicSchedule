<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="CourseAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- 字体 -->
    <style name="TextTitleStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextCourseEditLabelStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorTextBody</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="EditCourseEditContentStyle" parent="@android:style/Widget.EditText">
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColorHint">@color/colorAlpha999</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorTextBody</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
    </style>


    <style name="TextCourseEditWeekLabelStyle" parent="@android:style/Widget.TextView">
        <item name="android:background">@color/colorAlpha999</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <!-- fab 菜单 -->
    <style name="menu_labels_style">
        <item name="android:background">@drawable/bg_item_fab_menu</item>
        <item name="android:textColor">@color/colorTextBody</item>
    </style>

</resources>
